[user]
    name = Daniel Mihai Baragan
[color]
    ui = true
[credential]
    helper = cache --timeout=36000
[push]
    default = tracking
[core]
    excludesfile = ~/.gitignore
[alias]
    lt = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    lxor = !sh -c 'git log --oneline --left-right --boundary $(git_current_branch $1)' -
    st = status
    co = checkout
[branch]
    autosetuprebase = always
    autosetupmerge = false
[merge]
    conflictstyle = diff3

# allow this to overwrite
[include]
	path = ~/.gitconfig_local
