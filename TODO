add some of this to .gitconfig
[user]
    name = Daniel Baragan
    email = daniel.baragan@sellerengine.com
[color]
    ui = true
[credential]
    helper = cache --timeout=36000
[push]
    default = tracking
[core]
    excludesfile = /home/daniel/.gitignore_global
[alias]
    lt = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    lxor2 = !sh -c 'git log --oneline --left-right --boundary $1' -
    lxor = !sh -c 'git log --oneline --left-right --boundary $(git_current_branch)...origin/$(git_current_branch)' -
    st = status
    co = checkout
[branch]
    autosetuprebase = always
    autosetupmerge = false
[merge]
    conflictstyle = diff
