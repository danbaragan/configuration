#!/bin/bash
user=daniel
find . -name '*.py[co]' -delete
find . -name '.*.sw[pon]' -delete
find . -name '*~' -delete
name=$(python setup.py sdist --format=zip | tail -n 1 | cut -d "'" -f 2)
echo "Uploading ${name}.zip to eggshop"
scp dist/${name}.zip ${user}@mojito.edw.ro:/var/local/eggshop
echo "Removing dist/"
rm -rf dist
