#!/bin/bash

if [ -n "$1" ]; then
    range="$1"
else
	br=`git branch | grep -e'^\* '| cut -d' ' -f2`
	range=$br...origin/$br
fi

git log \
    --color=always \
    --cherry-mark \
    --boundary \
    --format=format:'%C(bold yellow)%m%C(reset) %C(yellow)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold green)â€” %an%C(reset)%C(yellow)%d%C(reset)' \
    $range
